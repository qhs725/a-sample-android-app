<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    style="@style/AppTheme"
    android:background="#d6155d15"
    android:clickable="false"
    android:textAlignment="gravity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="25dp"
        android:layout_height="260dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:src="@drawable/ic_launcher"
            android:id="@+id/imageView"
            />

        <TextView android:text="Sports Injury Prevention Screening"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:textSize="36sp"
            android:textColor="#d3000000"
            android:typeface="sans"
            android:visibility="visible"
            android:textStyle="bold"
            android:foreground="@color/abc_search_url_text_normal"
            android:layout_alignTop="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/get_google_token_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sign in with Google"
            android:textSize="28sp"

            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingBottom="50dp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/train_image"
        android:id="@+id/imageViewB"
        android:layout_below="@+id/get_google_token_button"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:foregroundTintMode="src_over"
        android:visibility="visible"
        android:tint="#d6155d15" />

</LinearLayout>